<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="16dp" />
            <stroke android:width="1dip" android:color="@color/grey" />
            <gradient android:angle="-90" android:startColor="@color/black" android:endColor="@color/grey_lite"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="16dp" />
            <stroke android:width="1dip" android:color="@color/grey" />
            <solid android:color="@color/grey_lite"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="16dp" />
            <stroke android:width="1dip" android:color="@color/black" />
            <gradient android:angle="-90" android:startColor="@color/grey_lite" android:endColor="@color/grey" />
        </shape>
    </item>
</selector>